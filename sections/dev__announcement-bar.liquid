<style>

  .announcement__content {
    display: flex;
    transition: transform {{ section.settings.animation_duration }}s ease-in-out;
  }

  .announcement__item {
    flex-shrink: 0;
    width: 100%;
    box-sizing: border-box;
    padding: 0 8px;
  }

  
</style>

<div class="announcement" {{ block.shopify_attributes }}>
  <div class="announcement__wrapper relative overflow-hidden">
    <div
      class="announcement__content"
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
    >
      {% for block in section.blocks %}
        {%- if block.settings.text != blank -%}
          <div class="announcement__item">
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement__link">
            {%- endif -%}
            <p class="announcement__message">
              <span>{{ block.settings.text | escape }}</span>
            </p>
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      {% endfor %}
    </div>
  </div>
</div>


<script>

  if (Shopify.designMode) {
    // document.documentElement.classList.add('shopify-design-mode');
    const announcementContent = document.querySelector('.announcement__content');
    const announcementItems = document.querySelectorAll('.announcement__item');
    let currentItem = 0;

    const slideAnnouncement = () => {
      currentItem = (currentItem + 1) % announcementItems.length;
      const translateValue = `-${currentItem * 100}%`;
      announcementContent.style.transform = `translateX(${translateValue})`;
    };

    setInterval(slideAnnouncement, {{ section.settings.animation_duration | times: 1000 }});

    // Trigger the first slide immediately
    slideAnnouncement();
        
}
   {% comment %} document.addEventListener('DOMContentLoaded', function () {

     
    const announcementContent = document.querySelector('.announcement__content');
    const announcementItems = document.querySelectorAll('.announcement__item');
    let currentItem = 0;

    const slideAnnouncement = () => {
      currentItem = (currentItem + 1) % announcementItems.length;
      const translateValue = `-${currentItem * 100}%`;
      announcementContent.style.transform = `translateX(${translateValue})`;
    };

    setInterval(slideAnnouncement, {{ section.settings.animation_duration | times: 1000 }});

    // Trigger the first slide immediately
    slideAnnouncement();
  }); {% endcomment %}
</script>


{% schema %}
{
  "name": "Announcement Bar",
  "class": "shopify-announcement",
  "settings": [
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Animation duration",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 4,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "placeholder": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}


